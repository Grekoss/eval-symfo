    <body>
        {% include 'partiels/_nav_main.html.twig' %}

        {% if is_granted('ROLE_USER') %}
            {% include 'partiels/_nav_user.html.twig' %}
        {% endif %}

        <div class="home-questions-container div-cloud">
            {% for tag in tags %}
                    <a href="{{ path('search_tag', {'slug': tag.slug}) }}" class="badge home-tag" style="background-color:{{ tag.backgroundColor }};color:{{ tag.textColor }};">{{ tag.name }}</a>

                {% endfor %}
        </div>
        
        <div id="block-body">
            {% block body %}{% endblock %}
        </div>
        
        <footer>
            <div class="home-questions-container div-footer">
                <em class="footer-item "><a class="primary-text-4" href="{{ path('cgu') }}">CGU</a></em>
                <em class="footer-item footer-copy">&copy; Grekoss 2018</em>
                <ul class="footer-item footer-list">
                    <li class="footer-list-item"><a class="primary-text-4" href="mailto:pourriascedric@gmail.com" target="_blank"><i class="fas fa-at"></i></a></li>
                    <li class="footer-list-item"><a class="primary-text-4" href="https://github.com/Grekoss" target="_blank"><i class="fab fa-github"></i></a></li>
                    <li class="footer-list-item"><a class="primary-text-4" href="https://twitter.com/ElGreKoss" target="_blank"><i class="fab fa-twitter"></i></a></li>
                    <li class="footer-list-item"><a class="primary-text-4" href="https://www.facebook.com/cedric.pourrias" target="_blank"><i class="fab fa-facebook-square"></i></a></li>
                    <li class="footer-list-item"><a class="primary-text-4" href="https://www.linkedin.com/in/cedricpourrias" target="_blank"><i class="fab fa-linkedin"></i></a></li>
                </ul>
            </div>
        </footer>

        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" charset="utf-8"></script>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script src="{{ asset('assets/js/app.js') }}"></script>
        {% block javascript %}{% endblock %}
        
    </body>

</html>
