{% extends 'backend/backend_layout.html.twig' %}

{% block titleAdmin %}SHOW{% endblock %}

{% block bodyAdmin %}
    <h1 class="backend-title primary-0 primary-text-4">Tag - {{ tag.name|capitalize }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Désignation</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th style="background-color:{{ tag.backgroundColor }};color:{{ tag.textColor }};">Couleur du fond</th>
                <td style="background-color:{{ tag.backgroundColor }};color:{{ tag.textColor }};">{{ tag.backgroundColor }}</td>
            </tr>
            <tr>
                <th style="background-color:{{ tag.backgroundColor }};color:{{ tag.textColor }};">Couleur du texte</th>
                <td style="background-color:{{ tag.backgroundColor }};color:{{ tag.textColor }};">{{ tag.textColor }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-secondary" href="{{ path('backend_tag_index') }}">Retour à la liste</a>

    <a class="btn btn-success" href="{{ path('backend_tag_edit', {'id': tag.id}) }}">Modifier</a>

    {{ include('backend/tag/_delete_form.html.twig') }}
{% endblock %}