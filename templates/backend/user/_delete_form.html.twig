<form class="d-inline" method="post" action="{{ path('backend_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce membre ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger" title="Supprimer le membre"><i class="far fa-trash-alt"></i></button>
</form>